<h1>Books</h1>
<table>
  <thead>
    <th class="table_head">Title</th>
    <th class="table_head">Body</th>
    <th colspan="3" class="table_head"></th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td class="table_content"><%= book.title %></td>
      <td class="table_content"><%= book.body %></td>
      <td class="table_content"><%= link_to "Show",book_path(book.id),class: "book_links"%></td>
      <td class="table_content"><%= link_to "Edit",edit_book_path(book.id),class: "book_links"%></td>
      <td class="table_content"><%= link_to "Destroy",book_path(book.id),method: :delete,"data-confirm" => "Are you sure?",class: "book_links"%></td>
    </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>

<% if @book.errors.any? %>
  <div class="error_explanation">
    <h2 class="error_head">
      <% if @book.errors.count > 1 %>
        <%= @book.errors.count %> errors prohibited this book from being saved:
      <% else %>
        <%= @book.errors.count %> error prohibited this book from being saved:
      <% end %>
    </h2>
    <ul class="error_content">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: books_path(), method: :post do |f| %>
  <div class="form">
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title %>
  </div>
  <div class="form">
    <%= f.label :body, 'Body' %>
    <%= f.text_area :body %>
  </div>
  <div class="form">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>